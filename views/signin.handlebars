<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title">
			Sign In
		</h3>
	</div>
	<form method="post" action="/signin" enctype="application/x-www-form-urlencoded">
		<div class="panel-body form-horizontal">
		{{#if error}}
			<div class="alert alert-danger">{{error}}</div>
		{{/if}}
			<div class="form-group col-md-12">
				<label class="col-md-2 control-label" for="username">
					Username:
				</label>
				<div class="col-md-10">
					<textarea class="form-control" name="username" rows="2"></textarea>
				</div>
				<label class="col-md-2 control-label" for="password">
					Password:
				</label>
				<div class="col-md-10">
					<textarea class="form-control" name="password" rows="2"></textarea>
				</div>
				<div class="form-group col-md-12">
					<div class="col-md-12 text-right">
						<button type="submit" id="login-btn" class-"btn btn-success" type="button"><i class="fa fa-cloud-upload "></i>Sign In</button>
					</div>
				</div>
			</div>
		</form>
	</div>
	